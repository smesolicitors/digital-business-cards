---
import { Image } from "astro:assets";
import bgImage from "../assets/bg-img.webp";
import logoImage from "../assets/logo.svg";
import logoImageDark from "../assets/logo_dark.svg";
---

<body
  class="bg-white md:bg-blue-50 dark:bg-smenavy-900 md:min-h-screen grid md:grid-cols-2 font-inter">
  <section
    class="w-full h-10 hidden md:flex items-center justify-center md:h-screen md:bg-transparent">
    <div class="hidden md:block">
      <Image
        src={bgImage}
        alt="Picture of the SME Solicitors office"
        class="h-screen mx-auto object-cover"
      />
    </div>
  </section>
  <section
    class="flex md:justify-items-center top-0 lg:items-center justify-center min-h-screen md:p-4 object-scale-down">
    <div
      class="z-10 justify-between md:rounded-xl md:shadow-2xl transition-all duration-300 animate-fade-in md:h-auto h-screen w-screen md:max-w-md">
      <div class="items-center">
        <!-- Image Section -->
        <div
          class="items-center text-center align-middle bg-linear-to-b from-smemint-50 to-smemint-100 dark:from-smenavy-800 dark:to-smenavy-700 w-full h-auto p-8 md:rounded-t-xl">
          <img src={logoImage.src} alt="SME Solicitors logo" class="w-60 h-60 mx-auto object-scale-down dark:hidden" />
          <img src={logoImageDark.src} alt="SME Solicitors logo" class="w-60 h-60 mx-auto object-scale-down hidden dark:block" />
        </div>

        <!-- Profile Section -->
        <div
          class="items-center text-center w-full p-8 grow h-full bg-white dark:bg-smenavy-800">
          <h2
            class="text-smenavy-500 dark:text-smenavy-50 text-3xl font-bold font-generalSans">
            Providing personal and proactive legal solutions since 1840.
          </h2>

          <ul
            class="mt-5 rounded-2xl border-2 border-smemint-500 bg-smemint-100 dark:bg-smenavy-700 dark:border-smenavy-600 text-left">
            <div
              class="border-b-2 border-smemint-500 dark:border-smenavy-600 p-4">
              <li class="flex">
                <div
                  class="rounded-full align-middle text-center bg-smenavy-500 dark:bg-smenavy-500 p-3 mr-3 w-fit h-fit">
                  <svg
                    class="w-6 h-6"
                    viewBox="0 0 73 52"
                    version="1.1"
                    xmlns="http://www.w3.org/2000/svg"
                    xmlns:xlink="http://www.w3.org/1999/xlink"
                    xml:space="preserve"
                    style="fill-rule:evenodd;clip-rule:evenodd;stroke-linejoin:round;stroke-miterlimit:2;">
                    <g transform="matrix(2,0,0,2,-261.808,-1931.55)">
                      <clipPath id="_clip1">
                        <rect x="130.889" y="965.773" width="36" height="25.5"
                        ></rect>
