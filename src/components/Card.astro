---
const feeEarner = {
  firstName: "Ian",
  lastName: "Stirzaker",
  role: "Senior Partner",
  email: "ian.stirzaker@smesolicitors.co.uk",
  phone: "+44 1905 723561",
  profileURL: "ian-stirzaker",
  imageURL: "https://www.smesolicitors.co.uk/upload/team/ian-stirzaker.png",
  department: "ForYou",
};
---

<div
  class="z-10 flex flex-col justify-between bg-white md:rounded-xl md:shadow-2xl transition-all duration-300 animate-fade-in md:h-auto h-screen w-screen md:max-w-md md:mb-6">
  <div class="flex flex-col items-center">
    <!-- Image Section -->
    <div
      class="items-center text-center align-middle bg-amber-100 w-full p-8 md:rounded-t-xl">
      <img
        loading="eager"
        src={feeEarner.imageURL}
        alt="Jack Stirzaker"
        class="rounded-full w-60 h-60 mx-auto"
      />
    </div>

    <!-- Profile Section -->
    <div class="items-center text-center w-full p-8 grow h-full">
      <h1 class="text-5xl font-bold text-blue-950 mb-2">
        {feeEarner.firstName}
        {feeEarner.lastName}
      </h1>
      <h2 class="uppercase tracking-wide text-yellow-700 text-lg font-semibold">
        {feeEarner.role}
      </h2>

